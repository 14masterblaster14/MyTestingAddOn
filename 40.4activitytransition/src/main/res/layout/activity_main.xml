<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.a404activitytransition.MainActivity">


    <LinearLayout
        android:id="@+id/shared_elements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="sharedElementTransition"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/Img_Logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/jaguar_logo"
            android:transitionName="logo_shared" />

        <TextView
            android:id="@+id/TxtView_MasterBlaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="MasterBlaster"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:transitionName="text_shared" />

        <ImageView
            android:id="@+id/Img_IronMan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fight"
            android:transitionName="img_shared" />
    </LinearLayout>
</LinearLayout>
