<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shared_elements_expand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <!-- Textview - textCircularRevelation is used for
        Circular Transition  -->
    <TextView
        android:id="@+id/textCircularRevelation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0ce11"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="MasterBlaster"
        android:textColor="@android:color/darker_gray"
        android:textSize="32sp"
        android:transitionName="text_shared" />

    <LinearLayout
        android:id="@+id/shared_elements_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/jaguar_logo"
            android:transitionName="logo_shared" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:src="@drawable/image"
            android:transitionName="img_shared" />

    </LinearLayout>

    <TextView
        android:id="@+id/TxtView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Welcome to Jungle. Stay tuned for more information and wish u all the best" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/TxtView2"
        android:layout_marginTop="51dp"
        android:text="Exit (Back Press)" />

</RelativeLayout>